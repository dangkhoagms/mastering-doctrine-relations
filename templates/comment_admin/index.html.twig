{% extends 'base.html.twig' %}

{% block title %}Hello CommentAdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1200px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Admin Comment</h1>
        <table class="table">
            <thead>
            <tr>
                <th width="5%">Id</th>
                <th width="10%">Article</th>
                <th width="20%">Author Name</th>
                <th width="35%">Content</th>
                <th width="10%">Create At</th>
                <th width="5%">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td><a href="{{ path('article_show',{slug:comment.article.slug}) }}">{{ comment.article.name }}</a></td>
                    <td>{{ comment.authorName }}</td>
                    <td>{{ comment.content | truncate}}</td>
                    <td>{{ comment.createdAt | ago }}</td>
                    <td><a href="{{ path('comment_admin_show',{id:comment.id}) }}">Show</a></td>
                    <td><a href="{{ path('comment_admin_edit',{id:comment.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
